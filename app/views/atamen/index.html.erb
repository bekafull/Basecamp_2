<html>
<body>
<div class="Attachmentbek"
<p style="color: green"><%= notice %></p>

<h1>Attachments</h1>
<%= link_to "Back", project_path(@project) %>

<%= form_with(model: @ataman) do |form| %>

  <div>
    <%= form.text_field :project_id, type: :hidden %>
  </div>

  <%= form.file_field :atr, required: :true %>

  <div>
    <%= form.submit 'Upload' %>
  </div>
<% end %>



<div id="atamen">
  <% @atamen.each do |ataman| %>
    
    <% if ataman.atr.attached? %>
      
      <% if ataman.atr.image? %>
        <%= link_to image_tag(ataman.atr, class: "img"),  rails_blob_path(ataman.atr, disposition: "attachment") %> <br>
      
       <% elsif ataman.atr.audio? %>
        <h2 class="entry-title"><%= ataman.atr.filename %>
          <audio controls>
            <source src=" <%= rails_blob_url(ataman.atr, disposition: "attachment") %>" type="audio/mpeg"/>
          </audio>
        </h2> <br>
        <% else %>
        <%= link_to ataman.atr.filename,  rails_blob_path(ataman.atr, disposition: "attachment") %> <br>
      <% end %>
      
    <% end %>
    <%= link_to "Destroy this attachment", ataman, 'data-turbo-method': :delete %> <br>
    
  <% end %>
</div>

</div>
</body>
</html>


